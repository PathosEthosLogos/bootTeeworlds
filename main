$ cp ~/teeworlds-tw-plus /opt/ -R
$ cp ~/teeworlds-bomb /opt/ -R
$ cp ~/teeworlds-zCatch /opt/ -R
$ cp ~/twbot /opt/ -R
$ cp ~/teesmash /opt/ -R
$ cp ~/vanilla64 /opt/ -R

$ useradd -c 'teeworlds-tw-plus' -d /opt/teeworlds-tw-plus -M -r -s /usr/sbin/nologin teeworlds-tw-plus
$ useradd -c 'teeworlds-bomb' -d /opt/teeworlds-bomb -M -r -s /usr/sbin/nologin teeworlds-bomb
$ useradd -c 'teeworlds-zCatch' -d /opt/teeworlds-zCatch -M -r -s /usr/sbin/nologin teeworlds-zCatch
$ useradd -c 'twbot' -d /opt/twbot -M -r -s /usr/sbin/nologin twbot
$ useradd -c 'teesmash' -d /opt/teesmash -M -r -s /usr/sbin/nologin teesmash
$ useradd -c 'vanilla64' -d /opt/vanill64 -M -r -s /usr/sbin/nologin vanilla64





$ nano /etc/systemd/system/teeworlds-tw-plus@.service
[Unit]
Description=teeworlds-tw-plus server with %i.cfg config file
After=syslog.target network.target

[Service]
User=teeworlds-tw-plus
WorkingDirectory=/opt/teeworlds-tw-plus
ExecStart=/opt/teeworlds-tw-plus/tw+_srv -f %i.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target



$ nano /etc/systemd/system/teeworlds-bomb@.service
[Unit]
Description=teeworlds-bomb server with %i.cfg config file
After=syslog.target network.target

[Service]
User=teeworlds-bomb
WorkingDirectory=/opt/teeworlds-bomb
ExecStart=/opt/teeworlds-bomb/teeworlds_srv -f %i.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target



$ nano /etc/systemd/system/teeworlds-zCatch@.service
[Unit]
Description=teeworlds-zCatch server with %i.cfg config file
After=syslog.target network.target

[Service]
User=teeworlds-zCatch
WorkingDirectory=/opt/teeworlds-zCatch
ExecStart=/opt/teeworlds-bomb/zcatch_srv -f %i.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target



$ nano /etc/systemd/system/twbot@.service
[Unit]
Description=twbot server with %i.cfg config file
After=syslog.target network.target

[Service]
User=twbot
WorkingDirectory=/opt/twbot
ExecStart=/opt/twbot/teeworlds_srv_bots -f %i.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target



$ nano /etc/systemd/system/teesmash@.service
[Unit]
Description=teesmash server with %i.cfg config file
After=syslog.target network.target

[Service]
User=teesmash
WorkingDirectory=/opt/teesmash
ExecStart=/opt/teesmash/teeworlds_srv -f %i.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target



$ nano /etc/systemd/system/vanilla64@.service
[Unit]
Description=vanilla64 server with %i.cfg config file
After=syslog.target network.target

[Service]
User=vanilla64
WorkingDirectory=/opt/vanilla64
ExecStart=/opt/vanilla64/teeworlds_srv64 -f %i.cfg
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target





$ chown teeworlds-tw-plus:teeworlds-tw-plus -R /opt/teeworlds-tw-plus
$ chown teeworlds-bomb:teeworlds-bomb -R /opt/teeworlds-bomb
$ chown teeworlds-zCatch:teeworlds-zCatch -R /opt/teeworlds-zCatch
$ chown twbot:twbot -R /opt/twbot
$ chown teesmash:teesmash -R /opt/teesmash
$ chown vanilla64:vanilla64 -R /opt/vanilla64

$ systemctl enable teeworlds-tw-plus@ctf teeworlds-tw-plus@ctf1 teeworlds-tw-plus@ictf teeworlds-tw-plus@gctf teeworlds-tw-plus@ctf64
$ systemctl enable teeworlds-bomb@bomb
$ systemctl enable teeworlds-zCatch@zcatch
$ systemctl enable twbot@twbot
$ systemctl enable teesmash@teesmash
$ systemctl enable vanilla64@ctf64

$ systemctl start teeworlds-tw-plus@ctf teeworlds-tw-plus@ctf1 teeworlds-tw-plus@ictf teeworlds-tw-plus@gctf teeworlds-tw-plus@ctf64
$ systemctl start teeworlds-bomb@bomb
$ systemctl start teeworlds-zCatch@zcatch
$ systemctl start twbot@twbot
$ systemctl start teesmash@teesmash
$ systemctl start vanilla64@ctf64
